<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/num1"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="1"
        android:onClick="numero1"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/num0"
        app:layout_constraintStart_toStartOf="@+id/tableLayout3" />

    <Button
        android:id="@+id/num4"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="4"
        android:onClick="numero4"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/num1"
        app:layout_constraintStart_toStartOf="@+id/tableLayout3" />

    <Button
        android:id="@+id/num7"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="7"
        android:onClick="numero7"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/num4"
        app:layout_constraintStart_toStartOf="@+id/tableLayout3" />

    <Button
        android:id="@+id/coseno"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="cos"
        android:onClick="cosinus"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/num7"
        app:layout_constraintStart_toStartOf="@+id/tableLayout3" />

    <Button
        android:id="@+id/seno"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="sin"
        android:onClick="sinus"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/num8"
        app:layout_constraintStart_toEndOf="@+id/coseno" />

    <Button
        android:id="@+id/tangente"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="tan"
        android:onClick="tangent"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/num9"
        app:layout_constraintStart_toEndOf="@+id/seno" />

    <Button
        android:id="@+id/clear"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="C"
        android:onClick="clear_pantalla"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/multiplicacion"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout3"
        app:layout_constraintStart_toEndOf="@+id/tangente" />

    <Button
        android:id="@+id/num8"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="8"
        android:onClick="numero8"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/num5"
        app:layout_constraintStart_toEndOf="@+id/num7" />

    <Button
        android:id="@+id/num9"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
